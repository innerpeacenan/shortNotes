{
    "name": "php-play",
    "description": "用于编写一个简易的php框架,用于学习目的",
    "keywords":["php-play"],
    "license":"MIT",
    "type":"project",
    "require":{
      "php": ">=7.0"
    },
    "autoload":{
        "files":[
            "app/library/helper/functions.php"
        ],
        "psr-4": {
